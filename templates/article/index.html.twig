{% extends 'base.html.twig' %}

{% block body %}
<article>
    <h1>Liste des articles ({{ articles | length }})</h1>
    <form action="{{ path('app_article_search') }}" method="get" id="search-form">
        <input type="search" name="search-term">
        <button>&#128269;</button>
    </form>
    <ul>
        {% for article in articles %}
            <li>
                <a href="{{ path('app_article_show', {'id': article.id}) }}">{{ article.title }}</a>
                <a href="{{ path('app_article_edit', {'id': article.id}) }}">Ã‰diter</a>
            </li>
        {% else %}
            <li>Pas d'article pour le moment</li>
        {% endfor %}
    </ul>
</article>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/form.js') }}"></script>
{% endblock %}