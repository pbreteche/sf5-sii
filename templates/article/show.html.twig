{% extends 'base.html.twig' %}

{% block body %}
<article>
    <h1>{{ article.title }}</h1>
    <div>{{ article.body }}</div>
    <div>
        {% for tag in article.tags %}
            {{ render(controller('App\\Controller\\ArticleController::indexByTag', {tag: tag})) }}
        {% endfor %}
    </div>
</article>
{% endblock %}